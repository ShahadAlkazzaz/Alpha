<!-- Delete Modal -->
<div class="modal" id="deleteProjectModal" style="display: none;">
    <div class="modal-content">
        <header>
            <h3 class="modal-title">Delete Project</h3>
            <button onclick="closeDeleteModal()" class="btn-close">✖</button>
        </header>

        <p>Are you sure you want to delete this project?</p>

        <form id="deleteForm" asp-action="Delete" asp-controller="Projects" method="post">
            <input type="hidden" id="Delete_Id" name="Id" />

            <div class="modal-actions">
                <button type="button" class="btn btn-light" onclick="closeDeleteModal()">Cancel</button>
                <button type="submit" class="btn btn-danger">Delete</button>
            </div>
        </form>
    </div>
</div>

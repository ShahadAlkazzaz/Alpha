<header>
    <div class="top-header">
        <div class="settings-avatar-wrapper" onclick="toggleProfileMenu()">
            <div class="settings-icon">
                <i class="fa-solid fa-gear"></i>
            </div>
            <img src="~/images/avatar.svg" alt="Avatar" class="profile-avatar" />
        </div>

        <div id="profileMenu" class="profile-menu">
            <div class="profile-info">
                <img src="~/images/avatar.svg" alt="Avatar" class="profile-avatar" />
                <!-- AI-genererad kod: Visar användarens fullständiga namn via en claim som sätts vid inloggning -->
                <span class="profile-name">@User.FindFirst("FullName")?.Value</span>
            </div>
            <form asp-controller="Auth" asp-action="Logout" method="post">
                <button type="submit" class="logout-btn">
                    <i class="fa-solid fa-right-from-bracket"></i> Logout
                </button>
            </form>
        </div>
    </div>
</header>
